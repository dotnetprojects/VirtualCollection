<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
    <PropertyGroup>
        <TargetFrameworks>netcoreapp3.0;net4</TargetFrameworks>
        <UseWPF>true</UseWPF>
        <Description>DotNetProjects.VirtualCollection</Description>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageId>DotNetProjects.VirtualCollection</PackageId>
        <Authors>DotNetProjects</Authors>
        <Company>DotNetProjects</Company>
        <Product>DotNetProjects.VirtualCollection</Product>
        <Copyright>2020 DotNetProjects</Copyright>
        <AssemblyVersion>2.0.0.0</AssemblyVersion>
        <FileVersion>2.0.0.0</FileVersion>
        <Version>2.0.0</Version>
        <PackageLicenseFile>License.txt</PackageLicenseFile>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(TargetFramework)' == 'netcoreapp3.0' ">
      <DefineConstants>$(DefineConstants);NETCORE</DefineConstants>
    </PropertyGroup>

    <ItemGroup>
      <None Include="License.txt">
        <Pack>True</Pack>
        <PackagePath></PackagePath>
      </None>
    </ItemGroup>
</Project>
